@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@if (HttpContextAccessor?.HttpContext?.Session.GetString("SteamID") != null)
{
    <p>SteamID: @HttpContextAccessor.HttpContext.Session.GetString("SteamID")</p>
}
else
{
    <p>Not logged in</p>
}
@{
    string env = ViewData["Environment"]?.ToString() ?? "Unknown";
}

<p>Current environment: <strong>@env</strong></p>