@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to WolflineSquad!</h1>
</div>
@if (HttpContextAccessor?.HttpContext?.Session.GetString("SteamID") != null)
{
    <p>SteamID: @HttpContextAccessor.HttpContext.Session.GetString("SteamID")</p>
}
else
{
    <p>Not logged in</p>
}
@{
    string env = ViewData["Environment"]?.ToString() ?? "Unknown";
}